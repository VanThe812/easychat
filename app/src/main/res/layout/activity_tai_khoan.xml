<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".thiandroidNC.hoten_lop.TaiKhoanActivity"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm mới tài khoản"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"/>

    <EditText
        android:id="@+id/inputTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Họ tên"/>

    <TextView
        android:id="@+id/textDiaChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"/>

    <EditText
        android:id="@+id/inputDiaChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Địa chỉ"/>

    <TextView
        android:id="@+id/textPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"/>

    <EditText
        android:id="@+id/inputPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Phone"
        android:layout_below="@id/textTen"/>

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"/>

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/inputImage"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:background="@drawable/bg_image"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        app:riv_oval="true"/>
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Add"
        android:textSize="@dimen/_16sdp"
        android:background="@drawable/bg_button"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/white"/>
</LinearLayout>