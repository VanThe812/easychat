<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="10dp"
    android:background="@color/teal_200">
    <ImageView
        android:id="@+id/image_custom_notification"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/image_custom_notification"
        android:layout_toStartOf="@id/imageMessageImage"
        android:orientation="vertical"
       >
        <TextView
            android:id="@+id/textViewTitleCustomNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:text="@string/app_name"/>
        <TextView
            android:id="@+id/textViewMessageCustomNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Compat.Notification.Info"
            android:text="@string/app_name" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imageMessageImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ic_launcher"
        style=""/>
</RelativeLayout>