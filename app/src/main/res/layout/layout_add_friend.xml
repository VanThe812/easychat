<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/layoutAddFriend">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="5in"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="InOrMmUsage" />
        <TextView
            android:id="@+id/textviewContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="@string/contact"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/textviewDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:text="@string/done"
            android:textColor="@color/blue"
            android:textSize="@dimen/_15ssp"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap" />
        <EditText
            android:id="@+id/searchContact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginTop="28dp"
            android:background="@drawable/bg_input"
            android:drawableStart="@drawable/ic_search_24"
            android:hint="@string/search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_13sdp"
            android:layout_below="@id/textviewContact"
            android:importantForAutofill="no" />
        <LinearLayout
            android:id="@+id/layoutRequestSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp"
            android:layout_below="@+id/searchContact"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/request_search"
                android:padding="@dimen/_8sdp"
                android:id="@+id/textviewRequestSearch"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/searchContact" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rcvRequestSearch"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:scrollbars="vertical"
                android:clipToPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textviewFriendRequest"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutFriendRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp"
            android:layout_below="@+id/layoutRequestSearch">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friend_request"
                android:padding="@dimen/_8sdp"
                android:id="@+id/textviewFriendRequest"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/searchContact" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contactRCV"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:scrollbars="vertical"
                android:clipToPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textviewFriendRequest"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutFriendKnow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp"
            android:layout_below="@+id/layoutFriendRequest">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/someone_you_may_know"
                android:padding="@dimen/_8sdp"
                android:id="@+id/textviewFriendKnow"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/searchContact" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/someoneKnowRCV"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:overScrollMode="never"
                android:scrollbars="vertical"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
